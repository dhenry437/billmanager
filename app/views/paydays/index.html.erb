<div class="px-3 mt-3">
  <h1>Paydays</h1>

  <table class="table">
    <thead class="table-light">
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Date</th>
      <th scope="col"></th>
    </tr>
    </thead>

    <tbody>
    <% @paydays.each do |payday| %>
      <tr>
        <td><%= payday.name %></td>
        <td><%= payday.date %></td>
        <td style="text-align: end"><%= link_to 'Show', payday %> <%= link_to 'Edit', edit_payday_path(payday) %> <%= link_to 'Destroy', payday, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    </tbody>
  </table>

  <%= link_to 'New Payday', new_payday_path, class: 'btn btn-primary' %>
</div>
