<div style="max-width: 450px" class="mx-auto px-3 mt-3">
  <h1>Bills</h1>

  <table>
    <thead>
    <tr>
      <th>Name</th>
      <th>Amount</th>
      <th>Date</th>
      <th>Recurring</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @bills.each do |bill| %>
      <tr>
        <td><%= bill.name %></td>
        <td><%= bill.amount %></td>
        <td><%= bill.date %></td>
        <td><%= bill.recurring %></td>
        <td><%= link_to 'Show', bill %></td>
        <td><%= link_to 'Edit', edit_bill_path(bill) %></td>
        <td><%= link_to 'Destroy', bill, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Bill', new_bill_path %>
</div>
